<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCF5EF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".NoteThirdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Sickness_text"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="병명"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/Sickness"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@color/colorBRWhite"
            android:gravity="center"
            android:hint="detail"
            android:inputType="date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Prescription_text"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="처방"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/Prescription"
            android:background="@color/colorBRWhite"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="hospital"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Precautions_text"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.5"
            android:text="주의사항"
            android:gravity="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/Precautions"
            android:background="@color/colorBRWhite"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="detail"
            android:inputType="date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Other_text"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="기타"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/Other"
            android:background="@color/colorBRWhite"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="detail"
            android:inputType="date" />
    </LinearLayout>


    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorRV"
        android:text="SAVE"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />
</LinearLayout>